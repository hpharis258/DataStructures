@model CarViewModel
<h1>Add your car to the cars List</h1>
<hr />
<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h5>Add a car </h5>
            </div>
            <div class="card-body">
                <form asp-controller="HelloCiortas" asp-action="AddCar" method="post">
                    <div class="mb-3">
                        <label class="from-label">Car Make</label>
                        <input asp-for="Make" type="text" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="from-label">Car Age</label>
                        <input asp-for="Age" type="number" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </form>
            </div>
            <div class="card-footer">

            </div>
        </div>
       
    </div>
</div>